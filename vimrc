"===
"===compile debug
"===
map <F5> :call CompileRunGcc()<CR>
func! CompileRunGcc()
    exec "w" 
    if &filetype == 'c' 
        exec '!g++ % -o %<'
        exec '!time ./%<'
    elseif &filetype == 'cpp'
        exec '!g++ % -o %<'
        exec '!time ./%<'
    elseif &filetype == 'python'
        exec '!time python %'
    elseif &filetype == 'sh'
        :!time bash %S
    endif                                                                              
endfun

map <F8> :call RunGdb()<CR>
func! RunGdb()
    exec "w"
    exec "!g++ -g -o %< %"
    exec "!gdb ./%<"
endfunc



